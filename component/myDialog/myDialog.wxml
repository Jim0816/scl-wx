<!-- 这是自定义组件的内部WXML结构 -->
<view class="content" 
      style="top:{{top}};left:{{left}};width:{{width}};height:{{height}};background-color:{{background}};border-radius:20rpx;z-index:99;display:{{show}};">
      <view class="title-view">
        {{title}}
        <view style="float:right;margin-top:20rpx;width:35rpx;height:35rpx;" bindtap="close">
          <image src="../../imgs/component/close.png" style="float:left;width:100%;height:100%;"/>
        </view>
        <slot class="slot" name="content"></slot>
      </view>
</view>