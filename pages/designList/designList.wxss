/* pages/designList.wxss */
page {
  background-color: #F8F8F8;
}

.top{
  width:100%;
  height: 130rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  flex-flow: row wrap;
}

.search-view{
  margin-top: 20rpx;
  margin-left: 4%;
  width:92%;
  height: 60rpx;
  display: flex;
  background-color: #F8F8F8;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  flex-flow: row wrap;
  border-radius: 25rpx;
}

.logo{
  margin-top: -10rpx;
  margin-left: 25rpx;
  width:30rpx;
  height: 30rpx;
}

.search-view > input{
  margin-left: 15rpx;
  width: 85%;
  height: 30rpx;
  font-size: 25rpx;
}

.top-bottom{
  margin-top: 15rpx;
  margin-left: 4%;
  width:92%;
  height: 40rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #333333;
}

.bottom{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  flex-flow: row wrap;
}

.design-view{
  margin-top: 20rpx;
  width:100%;
  height: 200rpx;
  margin-left: 4%;
  width:92%;
  background-color: #ffffff;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.design-view-left{
  width: 68%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.design-view-left-title{
  width: 100%;
  max-height: 80rpx;
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
}

.design-view-left-label{
  margin-top: 10rpx;
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 18rpx;
}

.label-1, .label-2, .label-3{
  min-width: 130rpx;
  height: 30rpx;
  text-align: center;
}

.design-view-left-bottom{
  margin-top: 10rpx;
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 18rpx;
  color: #999999;
}

.design-view-right{
  width: 25%;
  height: 160rpx;
  border: 1px solid #F8F8F8;
}



